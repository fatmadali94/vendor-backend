{
  "compilerOptions": {
    "module": "NodeNext",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "target": "ES6",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": false,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
  "ts-node": {
    "files": true
  }
}
